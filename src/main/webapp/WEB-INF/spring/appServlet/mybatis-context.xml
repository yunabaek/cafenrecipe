<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mybatis-spring="http://mybatis.org/schema/mybatis-spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://mybatis.org/schema/mybatis-spring http://mybatis.org/schema/mybatis-spring-1.2.xsd">
		
	<!-- 사용 설정 -->
	<!-- name=정해져 있음, id = 내맘대로 정할 수 있음 -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<!-- 위에서 설정한 datasource 불러오기 -->
		<property name="dataSource" ref="datasource"/>
		<!-- 쿼리를 저장한 xml 위치를 지정(지정된 패키지가 만들어지지 않았으면 오류 발생) -->
		<property name="mapperLocations">
			<list>
				<value>classpath:kr/co/cafenrecipe/board/dao/*.xml</value>
				<value>classpath:kr/co/cafenrecipe/member/dao/*.xml</value>
			</list>
		</property>
		<!-- DTO 경로 별칭 관련 설정 -->
		<property name="configLocation" value="classpath:config/aliase.xml"/>
	</bean>
	
	<!-- 마이바티스를 별다른 코드 없이 사용할 수 있도록 빈 등록 -->
	<mybatis-spring:scan base-package="kr.co.cafenrecipe.board.dao"/>
	<mybatis-spring:scan base-package="kr.co.cafenrecipe.member.dao"/>

</beans>
